{
  "reader": "semlink",
  "checkpoint_steps": 1024,
  "state_size": 150,
  "encoder_dropout": 0.5,
  "encoder_input_dropout": 0.5,
  "batch_size": 64,
  "encoder": "lstm",
  "encoder_layers": 1,
  "optimizer": {
    "name": "LazyAdam",
    "params": {
      "beta1": 0.9,
      "beta2": 0.9
    },
    "lr": 0.001,
    "clip": 5.0
  },
  "buckets": [
    2,
    3,
    4,
    5,
    6,
    7,
    8,
    10,
    12,
    14,
    16,
    20,
    24,
    28,
    32,
    64,
    128
  ],
  "heads": [
    {
      "name": "gold",
      "type": "token-classifier",
      "metric": "Accuracy"
    }
  ],
  "features": {
    "seq_feat": "word",
    "targets": [
      {
        "name": "gold",
        "key": "gold",
        "rank": 1
      }
    ],

    "inputs": [
      {
        "name": "elmo",
        "key": "word"
      },
      {
        "name": "word",
        "key": "word",
        "mapping_funcs": [
          "lower",
          "digit_norm"
        ],
        "config": {
          "dim": 300,
          "initializer": {
            "embedding": "vectors/glove.840B.300d.txt",
            "pkl_path": "word-vectors.pkl",
            "include_in_vocab": 100000,
            "zero_init": true,
            "restrict_vocab": false
          }
        },
        "threshold": 1
      },
      {
        "name": "token_index",
        "key": "token_index",
        "rank": 1,
        "numeric": true
      }
    ]
  }
}