{
  "reader": "tsv",
  "type": "classifier",
  "checkpoint_steps": 1024,
  "state_size": 512,
  "encoder_dropout": 0.5,
  "encoder_output_dropout": 0.5,
  "input_dropout": 0.5,
  "encoder": "lstm",
  "encoder_layers": 1,
  "batch_size": 32,
  "metric": "Accuracy",
  "optimizer": {
    "name": "LazyAdam",
    "params": {
      "beta1": 0.9,
      "beta2": 0.9
    },
    "lr": 0.001,
    "clip": 5.0
  },
  "features": {
    "seq_feat": "gold",
    "targets": [
      {
        "name": "gold",
        "key": "gold",
        "rank": 1,
        "indices": {
          "<UNK>": 0
        },
        "unknown_word": "<UNK>",
        "pad_word": "<UNK>"
      }
    ],
    "inputs": [
      {
        "name": "word",
        "key": "word",
        "config": {
          "dim": 300,
          "initializer": {
            "embedding": "vectors/glove.840B.300d.txt",
            "pkl_path": "word-vectors.pkl",
            "include_in_vocab": 100000,
            "zero_init": true,
            "restrict_vocab": false
          }
        },
        "threshold": 2
      }
    ]
  }
}