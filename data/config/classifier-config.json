{
  "reader": "tsv",
  "type": "classifier",
  "checkpoint_steps": 1024,
  "state_size": 100,
  "input_dropout": 0.5,
  "batch_size": 32,
  "metric": "Accuracy",
  "optimizer": {
    "name": "LazyAdam",
    "params": {
      "beta1": 0.9,
      "beta2": 0.9
    },
    "lr": 0.001,
    "clip": 5.0
  },
  "features": {
    "seq_feat": "word",
    "targets": [
      {
        "name": "gold",
        "key": "gold",
        "rank": 1,
        "indices": {
          "<UNK>": 0
        },
        "unknown_word": "<UNK>",
        "pad_word": "<UNK>"
      }
    ],
    "inputs": [
      {
        "name": "word",
        "key": "word",
        "config": {
          "dim": 300,
          "initializer": {
            "embedding": "vectors/glove.840B.300d.txt",
            "pkl_path": "word-vectors.pkl",
            "include_in_vocab": 100000,
            "zero_init": true,
            "restrict_vocab": false
          }
        },
        "left_padding": 2,
        "right_padding": 2,
        "threshold": 1,
        "padding_funcs": [
          {
            "type": "conv",
            "count": 2,
            "left": "<BOS>",
            "right": "<EOS>"
          }
        ]
      }
    ]
  }
}