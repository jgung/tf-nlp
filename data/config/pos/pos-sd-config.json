{
  "reader": {
    "field_index_map": {
      "word": 1,
      "gold": 3
    }
  },
  "batch_size": 10,
  "optimizer": {
    "name": "Momentum",
    "params": {
      "momentum": 0.9
    },
    "lr": {
      "rate": 0.01,
      "name": "inverse_time_decay",
      "params": {
        "decay_steps": 3822,
        "decay_rate": 0.05
      }
    },
    "clip": 5.0
  },
  "features": {
    "seq_feat": "word",
    "targets": [
      {
        "name": "gold",
        "key": "gold",
        "indices": {
          "FW": 0
        },
        "unknown_word": "FW",
        "pad_word": "FW"
      }
    ],
    "inputs": [
      {
        "name": "word",
        "key": "word",
        "mapping_funcs": [
          "lower",
          "digit_norm"
        ],
        "config": {
          "dim": 100,
          "initializer": {
            "embedding": "vectors/glove.6B.100d.txt",
            "pkl_path": "word-vectors.pkl",
            "include_in_vocab": 400000,
            "zero_init": true,
            "restrict_vocab": true
          }
        }
      },
      {
        "name": "char",
        "key": "word",
        "rank": 3,
        "left_padding": 2,
        "right_padding": 2,
        "max_len": 30,
        "mapping_funcs": [
          "chars"
        ],
        "config": {
          "dim": 30,
          "dropout": 0.5,
          "function": {
            "name": "ConvNet",
            "kernel_size": 3,
            "num_filters": 30
          }
        }
      }
    ]
  },
  "encoders": [
    {
      "name": "words_and_chars",
      "type": "concat",
      "inputs": [
        "word",
        "char"
      ],
      "input_dropout": 0.5
    },
    {
      "name": "blstm",
      "inputs": [
        "words_and_chars"
      ],
      "type": "lstm",
      "state_size": 200,
      "encoder_dropout": 0.5,
      "encoder_output_dropout": 0.5,
      "encoder_layers": 1
    }
  ],
  "heads": [
    {
      "encoder": "blstm",
      "name": "gold",
      "type": "tagger",
      "metric": "Accuracy",
      "crf": true
    }
  ]
}