{
  "reader": "conll_2005",
  "type": "srl",
  "checkpoint_steps": 1000,
  "state_size": 300,
  "input_dropout": 0.0,
  "encoder_dropout": 0.1,
  "encoder": "dblstm",
  "encoder_layers": 8,
  "batch_size": 80,
  "buckets": [
    10,
    15,
    25,
    30,
    75
  ],
  "metric": "F-Measure",
  "optimizer": {
    "name": "Adadelta",
    "params": {
      "epsilon": 1e-6
    },
    "lr": 1.0,
    "clip": 1.0
  },
  "features": {
    "seq_feat": "word",
    "targets": [
      {
        "name": "gold",
        "key": "gold",
        "indices": {
          "O": 0
        },
        "unknown_word": "O"
      }
    ],
    "features": [
      {
        "name": "elmo",
        "key": "word"
      },
      {
        "name": "word",
        "key": "word",
        "mapping_funcs": [
          "lower"
        ],
        "config": {
          "dim": 100,
          "initializer": {
            "embedding": "vectors/glove.6B.100d.txt",
            "pkl_path": "word-vectors.pkl",
            "include_in_vocab": 100000
          }
        }
      },
      {
        "name": "marker",
        "key": "marker",
        "config": {
          "dim": 100
        },
        "indices": {
          "0": 0
        },
        "unknown_word": "0"
      }
    ]
  }
}