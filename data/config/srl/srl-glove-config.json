{
  "reader": "conll_2005",
  "max_epochs": 500,
  "patience_epochs": 200,
  "batch_size": 80,
  "ema_decay": 0.999,
  "optimizer": "./optim/adadelta.json",
  "features": {
    "seq_feat": "word",
    "targets": [
      "./feats/gold.json"
    ],
    "inputs": [
      "../shared/feats/glove-100d.json",
      "./feats/marker.json"
    ]
  },
  "encoders": [
    {
      "name": "tokens",
      "type": "concat",
      "inputs": [
        "word",
        "marker"
      ]
    },
    "./encoder/alternating-lstm.json"
  ],
  "heads": [
    "./heads/srl-head.json"
  ]
}