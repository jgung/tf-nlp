{
  "reader": "conll_2005",
  "max_epochs": 500,
  "patience_epochs": 200,
  "batch_size": 80,
  "ema_decay": 0.999,
  "optimizer": "./optim/adadelta.json",
  "features": {
    "seq_feat": "word",
    "targets": [
      "./feats/gold.json"
    ],
    "inputs": [
      "../shared/feats/glove-100d.json",
      "./feats/marker.json"
    ]
  },
  "encoders": [
    {
      "name": "tokens",
      "type": "concat",
      "inputs": [
        "word",
        "marker"
      ],
      "input_dropout": 0.0
    },
    {
      "name": "alternating_lstm",
      "inputs": [
        "tokens"
      ],
      "type": "dblstm",
      "state_size": 300,
      "encoder_dropout": 0.1,
      "encoder_layers": 8
    }
  ],
  "heads": [
    {
      "encoder": "alternating_lstm",
      "name": "gold",
      "type": "srl",
      "label_smoothing": 0.1
    }
  ]
}