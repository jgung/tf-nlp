{
  "reader": {
    "field_index_map": {
      "word": 3,
      "xpos": 4,
      "predicate": 6,
      "deprel": 8,
      "head": 9
    },
    "pred_start": 13,
    "map_with_regex": true,
    "label_mappings": {
      "gold": {
        "^(\\S+)\\$(\\S+)": "\\2"
      },
      "ft": {
        "^(\\S+)\\$(\\S+)": "\\1"
      }
    }
  },
  "checkpoint_epochs": 0.5,
  "max_epochs": 8,
  "batch_size": 16,
  "optimizer": {
    "name": "bert",
    "lr": {
      "name": "bert",
      "rate": 0.00005,
      "warmup_proportion": 0.1
    },
    "clip": 1.0
  },
  "features": {
    "targets": [
      {
        "name": "gold",
        "key": "gold",
        "indices": {
          "O": 0
        },
        "unknown_word": "O",
        "pad_word": "O"
      },
      {
        "name": "ft",
        "key": "ft",
        "indices": {
          "O": 0
        },
        "unknown_word": "O",
        "pad_word": "O"
      },
      {
        "name": "head",
        "key": "head",
        "numeric": true,
        "padding_funcs": [
          {
            "type": "pad",
            "count": 1,
            "value": 0
          }
        ]
      },
      {
        "name": "deprel",
        "key": "deprel",
        "indices": {
          "O": 0
        },
        "unknown_word": "dep",
        "pad_word": "O",
        "padding_funcs": [
          {
            "type": "pad",
            "count": 1,
            "value": "<ROOT>"
          }
        ]
      },
      {
        "name": "pos",
        "key": "xpos",
        "indices": {
          "O": 0
        },
        "unknown_word": "NN",
        "pad_word": "O"
      }
    ],
    "inputs": [
      {
        "name": "bert",
        "drop_subtokens": true
      },
      {
        "name": "marker",
        "key": "marker",
        "config": {
          "dim": 10
        },
        "indices": {
          "0": 0
        },
        "unknown_word": "0",
        "pad_word": "0"
      }
    ]
  },
  "encoders": [
    {
      "name": "bert-no-subtokens",
      "type": "remove_subtokens",
      "inputs": [
        "bert"
      ]
    },
    {
      "name": "tokens",
      "type": "concat",
      "inputs": [
        "bert-no-subtokens",
        "marker"
      ],
      "input_dropout": 0.1
    },
    {
      "name": "with-sentinel",
      "type": "sentinel",
      "inputs": [
        "bert-no-subtokens"
      ]
    },
    {
      "name": "dep-blstm",
      "inputs": [
        "with-sentinel"
      ],
      "encoder": "lstm",
      "state_size": 400,
      "encoder_dropout": 0.33,
      "encoder_input_dropout": 0.33,
      "forget_bias": 1,
      "encoder_layers": 3
    },
    {
      "name": "blstm",
      "inputs": [
        "tokens"
      ],
      "type": "lstm",
      "state_size": 768,
      "encoder_dropout": 0.1,
      "encoder_output_dropout": 0.1,
      "encoder_layers": 1
    },
    {
      "name": "predicate",
      "type": "repeat_token",
      "inputs": [
        "blstm"
      ],
      "key": "predicate_index"
    },
    {
      "name": "blstm_pred_and_word",
      "type": "concat",
      "inputs": [
        "predicate",
        "blstm"
      ]
    },
    {
      "name": "mlp",
      "type": "mlp",
      "inputs": [
        "blstm_pred_and_word"
      ],
      "dim": 300,
      "layers": 1,
      "keep_prob": 0.9
    }
  ],
  "heads": [
    {
      "encoder": "mlp",
      "name": "gold",
      "type": "srl"
    },
    {
      "encoder": "mlp",
      "name": "ft",
      "type": "srl"
    },
    {
      "encoder": "dep-blstm",
      "name": "deprel",
      "type": "parser",
      "rel_mlp_size": 100,
      "arc_mlp_size": 500,
      "mlp_dropout": 0.33
    },
    {
      "encoder": "bert-no-subtokens",
      "name": "pos",
      "type": "tagger",
      "metric": "Accuracy",
      "mlp_dropout": 0.33
    }
  ]
}