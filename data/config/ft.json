{
  "comments": "314,158 in OntoNotes (U) training corpus, 10240 steps w/ batch size of 32 is about 1 epoch, 102480 steps is 10 epochs",
  "reader": {
    "field_index_map": {
      "word": 3,
      "pos": 4,
      "parse": 5,
      "predicate": 6,
      "sense": 7
    },
    "pred_start": 11,
    "pred_end": 1,
    "map_with_regex": true,
    "label_mappings": {
      "gold": {
        "^([RC]-)?(?:ARGM-)?(\\S+)$": "\\1\\2"
      }
    }
  },
  "checkpoint_steps": 10240,
  "patience": 102480,
  "max_steps": 1000000,
  "batch_size": 32,
  "optimizer": {
    "name": "Adadelta",
    "params": {
      "epsilon": 1e-6
    },
    "lr": 1.0,
    "clip": 1.0
  },
  "features": {
    "seq_feat": "gold",
    "targets": [
      {
        "name": "gold",
        "key": "gold",
        "indices": {
          "O": 0
        },
        "unknown_word": "O",
        "pad_word": "O"
      }
    ],
    "inputs": [
      {
        "name": "elmo",
        "key": "word"
      },
      {
        "name": "marker",
        "key": "marker",
        "config": {
          "dim": 100
        },
        "indices": {
          "0": 0,
          "1": 1
        },
        "unknown_word": "0",
        "pad_word": "0"
      }
    ]
  },
  "encoders": [
    {
      "name": "elmo_and_marker",
      "type": "concat",
      "inputs": [
        "elmo",
        "marker"
      ],
      "input_dropout": 0.0
    },
    {
      "name": "blstm",
      "inputs": [
        "elmo_and_marker"
      ],
      "type": "dblstm",
      "state_size": 300,
      "encoder_output_dropout": 0.1,
      "encoder_layers": 8
    }
  ],
  "heads": [
    {
      "encoder": "blstm",
      "name": "gold",
      "type": "srl",
      "label_smoothing": 0.1
    }
  ]
}