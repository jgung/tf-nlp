{
  "reader": "conll_2003",
  "throttle_secs": 0,
  "checkpoint_steps": 1500,
  "state_size": 200,
  "dropout": 0.5,
  "input_dropout": 0.5,
  "encoder": "lstm",
  "encoder_layers": 1,
  "crf": true,
  "batch_size": 10,
  "optimizer": {
    "name": "Momentum",
    "params": {
      "momentum": 0.9
    },
    "lr": {
      "rate": 0.015,
      "name": "inverse_time_decay",
      "params": {
        "decay_steps": 2000,
        "decay_rate": 0.05
      }
    },
    "clip": 5.0
  },
  "features": {
    "seq_feat": "word",
    "targets": [
      {
        "name": "gold",
        "key": "gold",
        "rank": 2,
        "indices": {
          "O": 0
        },
        "unknown_word": "O"
      }
    ],
    "features": [
      {
        "name": "text",
        "key": "word",
        "rank": 2,
        "mapping_funcs": []
      },
      {
        "name": "word",
        "key": "word",
        "rank": 2,
        "mapping_funcs": [
          "lower"
        ],
        "config": {
          "dim": 100,
          "trainable": true,
          "dropout": 0,
          "initializer": {
            "embedding": "vectors/glove.6B.100d.txt",
            "pkl_path": "word-vectors.pkl",
            "include_in_vocab": 100000
          },
          "func": {
          }
        }
      },
      {
        "name": "char",
        "key": "word",
        "rank": 3,
        "left_padding": 2,
        "right_padding": 2,
        "max_len": 30,
        "config": {
          "dim": 30,
          "trainable": true,
          "dropout": 0.5,
          "function": {
            "name": "ConvNet",
            "kernel_size": 3,
            "num_filters": 30
          }
        }
      }
    ]
  }
}