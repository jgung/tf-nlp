{
  "reader": "tsv",
  "batch_size": 10,
  "optimizer": {
    "name": "LazyAdam",
    "params": {
      "beta1": 0.9,
      "beta2": 0.9
    },
    "lr": 0.001,
    "clip": 5.0
  },
  "features": {
    "seq_feat": "word",
    "targets": [
      {
        "name": "gold",
        "key": "gold",
        "rank": 1,
        "unknown_word": "2",
        "pad_word": "2"
      }
    ],
    "inputs": [
      {
        "name": "word",
        "key": "word",
        "mapping_funcs": [
          "lower",
          "digit_norm"
        ],
        "config": {
          "dim": 300,
          "initializer": {
            "embedding": "vectors/glove.840B.300d.txt",
            "pkl_path": "word-vectors.pkl",
            "include_in_vocab": 100000,
            "zero_init": true,
            "restrict_vocab": false
          }
        },
        "threshold": 1
      }
    ]
  },
  "encoders": [
    {
      "name": "blstm",
      "inputs": [
        "word"
      ],
      "type": "lstm",
      "state_size": 150,
      "encoder_dropout": 0.5,
      "encoder_input_dropout": 0.5,
      "encoder_output_dropout": 0.5,
      "encoder_layers": 1
    }
  ],
  "heads": [
    {
      "encoder": "blstm",
      "name": "gold",
      "type": "classifier",
      "metric": "Accuracy"
    }
  ]
}