{
  "reader": "tsv",
  "batch_size": 32,
  "optimizer": {
    "name": "bert",
    "lr": {
      "name": "bert",
      "rate": 0.00005,
      "warmup_proportion": 0.1
    },
    "clip": 1.0
  },
  "features": {
    "targets": [
      {
        "name": "gold",
        "key": "gold",
        "rank": 1,
        "unknown_word": "2",
        "pad_word": "2"
      }
    ],
    "inputs": [
      {
        "name": "bert",
        "drop_subtokens": true
      }
    ]
  },
  "encoders": [
    {
      "name": "bert-no-subtokens",
      "type": "remove_subtokens",
      "inputs": [
        "bert"
      ]
    },
    {
      "name": "blstm",
      "inputs": [
        "bert-no-subtokens"
      ],
      "type": "lstm",
      "state_size": 512,
      "encoder_input_dropout": 0.1,
      "encoder_output_dropout": 0.1,
      "encoder_layers": 1
    }
  ],
  "heads": [
    {
      "encoder": "blstm",
      "name": "gold",
      "type": "classifier",
      "metric": "Accuracy"
    }
  ]
}