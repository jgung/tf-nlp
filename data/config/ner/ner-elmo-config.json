{
  "reader": "conll_2003",
  "batch_size": 10,
  "optimizer": {
    "name": "Momentum",
    "params": {
      "momentum": 0.9
    },
    "lr": {
      "rate": 0.015,
      "name": "inverse_time_decay",
      "params": {
        "decay_steps": 2000,
        "decay_rate": 0.05
      }
    },
    "clip": 5.0
  },
  "features": {
    "seq_feat": "word",
    "targets": [
      "./feats/targets-feat.json"
    ],
    "inputs": [
      {
        "name": "elmo",
        "key": "word"
      },
      "../shared/feats/glove-100d.json",
      "../shared/feats/char-conv.json"
    ]
  },
  "encoders": [
    {
      "name": "words_and_chars",
      "type": "concat",
      "inputs": [
        "word",
        "char",
        "elmo"
      ],
      "input_dropout": 0.5
    },
    "./encoder/blstm.json"
  ],
  "heads": [
    "./heads/crf-head.json"
  ]
}