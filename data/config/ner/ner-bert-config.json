{
  "reader": "conll_2003",
  "max_epochs": 4,
  "batch_size": 16,
  "optimizer": {
    "name": "bert",
    "lr": {
      "name": "bert",
      "rate": 0.00003,
      "warmup_proportion": 0.1
    },
    "clip": 1.0
  },
  "features": {
    "targets": [
      {
        "name": "NE",
        "key": "gold",
        "indices": {
          "O": 0,
          "X": 1
        },
        "unknown_word": "O",
        "pad_word": "O"
      }
    ],
    "inputs": [
      {
        "name": "bert"
      }
    ]
  },
  "encoders": [
    {
      "name": "identity",
      "inputs": [
        "bert"
      ],
      "dropout": 0.1,
      "type": "identity"
    }
  ],
  "heads": [
    {
      "encoder": "identity",
      "name": "NE",
      "type": "ner",
      "crf": false
    }
  ]
}