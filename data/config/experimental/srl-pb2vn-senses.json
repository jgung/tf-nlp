{
  "reader": {
    "field_index_map": {
      "word": 3,
      "pos": 4,
      "predicate": 6,
      "sense": 7
    },
    "pred_start": 11,
    "pred_end": 1,
    "sense_mappings": "./mappings/pb2vn.json"
  },
  "checkpoint_epochs": 0.5,
  "max_epochs": 8,
  "batch_size": 16,
  "optimizer": {
    "name": "bert",
    "lr": {
      "name": "bert",
      "rate": 0.00005,
      "warmup_proportion": 0.1
    },
    "clip": 1.0
  },
  "features": {
    "seq_feat": "gold",
    "targets": [
      {
        "name": "gold",
        "key": "gold",
        "indices": {
          "O": 0,
          "X": 1
        },
        "unknown_word": "O",
        "pad_word": "O"
      }
    ],
    "inputs": [
      {
        "name": "bert"
      },
      {
        "name": "vncls",
        "key": "sense",
        "config": {
          "dim": 100,
          "function": {
            "name": "Mean"
          }
        }
      },
      {
        "name": "marker",
        "key": "marker",
        "config": {
          "dim": 10
        },
        "indices": {
          "0": 0
        },
        "unknown_word": "0",
        "pad_word": "0"
      }
    ]
  },
  "encoders": [
    {
      "name": "subtokens",
      "type": "concat",
      "inputs": [
        "bert",
        "marker"
      ],
      "input_dropout": 0.1
    },
    {
      "name": "tokens",
      "type": "repeat_and_concat",
      "inputs": [
        "vncls",
        "subtokens"]
    },
    {
      "name": "blstm",
      "inputs": [
        "tokens"
      ],
      "type": "lstm",
      "state_size": 768,
      "encoder_dropout": 0.1,
      "encoder_output_dropout": 0.1,
      "encoder_layers": 1,
      "sequence_length_key": "bert_split_idx"
    },
    {
      "name": "predicate",
      "type": "repeat_token",
      "inputs": [
        "blstm"
      ],
      "key": "predicate_index"
    },
    {
      "name": "blstm_pred_and_word",
      "type": "concat",
      "inputs": [
        "predicate",
        "blstm"
      ]
    },
    {
      "name": "mlp",
      "type": "mlp",
      "inputs": [
        "blstm_pred_and_word"
      ],
      "dim": 300,
      "layers": 1,
      "keep_prob": 0.9
    }
  ],
  "heads": [
    {
      "encoder": "mlp",
      "name": "gold",
      "type": "srl"
    }
  ]
}