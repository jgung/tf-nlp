{
  "reader": "conll_2005",
  "max_epochs": 1000,
  "patience_epochs": 70,
  "checkpoint_epochs": 2,
  "batch_size": 32,
  "optimizer": {
    "name": "LazyNadam",
    "params": {
      "beta1": 0.9,
      "beta2": 0.98,
      "epsilon": 1e-12,
      "use_nesterov": true
    },
    "lr": {
      "name": "vaswani",
      "rate": 0.04,
      "warmup_steps": 8000,
      "decay_rate": 1.5,
      "decay_steps": 5000
    },
    "clip": 1.0
  },
  "features": {
    "seq_feat": "word",
    "targets": [
      {
        "name": "gold",
        "key": "gold",
        "indices": {
          "O": 0
        },
        "unknown_word": "O",
        "pad_word": "O"
      }
    ],
    "inputs": [
      {
        "name": "elmo",
        "key": "word"
      },
      {
        "name": "word",
        "key": "word",
        "mapping_funcs": [
          "lower",
          "digit_norm"
        ],
        "config": {
          "dim": 100,
          "initializer": {
            "embedding": "vectors/glove.6B.100d.txt",
            "pkl_path": "word-vectors.pkl",
            "include_in_vocab": 400000,
            "restrict_vocab": true
          }
        }
      },
      {
        "name": "marker",
        "key": "marker",
        "config": {
          "dim": 100
        },
        "indices": {
          "0": 0
        },
        "unknown_word": "0",
        "pad_word": "0"
      }
    ]
  },
  "encoders": [
    {
      "name": "words_and_chars",
      "type": "concat",
      "inputs": [
        "word",
        "elmo",
        "marker"
      ],
      "input_dropout": 0.2
    },
    {
      "name": "blstm",
      "inputs": [
        "words_and_chars"
      ],
      "type": "transformer",
      "state_size": 300,
      "encoder_dropout": 0.1,
      "num_heads": 8,
      "head_dim": 25,
      "attention_dropout": 0.1,
      "relu_hidden_size": 800,
      "relu_dropout": 0.1,
      "prepost_dropout": 0.1,
      "encoder_layers": 10
    }
  ],
  "heads": [
    {
      "encoder": "blstm",
      "name": "gold",
      "type": "srl"
    }
  ]
}