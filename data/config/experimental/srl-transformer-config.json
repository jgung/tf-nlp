{
  "reader": "conll_2005",
  "max_epochs": 1000,
  "patience_epochs": 70,
  "checkpoint_epochs": 2,
  "batch_size": 32,
  "optimizer": {
    "name": "LazyNadam",
    "params": {
      "beta1": 0.9,
      "beta2": 0.98,
      "epsilon": 1e-12,
      "use_nesterov": true
    },
    "lr": {
      "name": "vaswani",
      "rate": 0.04,
      "warmup_steps": 8000,
      "decay_rate": 1.5,
      "decay_steps": 5000
    },
    "clip": 1.0
  },
  "features": {
    "seq_feat": "word",
    "targets": [
      "../srl/feats/gold.json"
    ],
    "inputs": [
      "../shared/feats/elmo.json",
      "../shared/feats/glove-100d.json",
      "../shared/feats/marker.json"
    ]
  },
  "encoders": [
    {
      "name": "words_and_chars",
      "type": "concat",
      "inputs": [
        "word",
        "elmo",
        "marker"
      ],
      "input_dropout": 0.2
    },
    {
      "name": "blstm",
      "inputs": [
        "words_and_chars"
      ],
      "type": "transformer",
      "state_size": 300,
      "encoder_dropout": 0.1,
      "num_heads": 8,
      "head_dim": 25,
      "attention_dropout": 0.1,
      "relu_hidden_size": 800,
      "relu_dropout": 0.1,
      "prepost_dropout": 0.1,
      "encoder_layers": 10
    }
  ],
  "heads": [
    {
      "encoder": "blstm",
      "name": "gold",
      "type": "srl"
    }
  ]
}