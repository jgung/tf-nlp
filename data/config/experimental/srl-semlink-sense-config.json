{
  "reader": {
    "field_index_map": {
      "word": 2,
      "sense": 4,
      "predicate": 5
    },
    "pred_start": 6
  },
  "max_epochs": 500,
  "patience_epochs": 200,
  "batch_size": 80,
  "optimizer": "../srl/optim/adadelta.json",
  "features": {
    "seq_feat": "word",
    "targets": [
      "../srl/feats/gold.json"
    ],
    "inputs": [
      "../shared/feats/elmo.json",
      "../shared/feats/glove-100d.json",
      {
        "name": "marker",
        "key": "marker",
        "config": {
          "dim": 50
        },
        "indices": {
          "0": 0
        },
        "unknown_word": "0",
        "pad_word": "0"
      },
      {
        "name": "sense",
        "key": "sense",
        "threshold": 10,
        "config": {
          "dim": 50
        }
      }
    ]
  },
  "encoders": [
    {
      "name": "words_and_chars",
      "type": "concat",
      "inputs": [
        "word",
        "elmo",
        "marker",
        "sense"
      ],
      "input_dropout": 0.0
    },
    {
      "name": "blstm",
      "inputs": [
        "words_and_chars"
      ],
      "type": "dblstm",
      "state_size": 300,
      "encoder_dropout": 0.1,
      "encoder_layers": 8
    }
  ],
  "heads": [
    {
      "encoder": "blstm",
      "name": "gold",
      "type": "srl"
    }
  ]
}