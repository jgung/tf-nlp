{
  "reader": {
    "field_index_map": {
      "word": 2,
      "pos": 3,
      "sense": 4,
      "predicate": 5
    },
    "pred_start": 6
  },
  "max_epochs": 500,
  "patience_epochs": 200,
  "batch_size": 80,
  "optimizer": "../srl/optim/adadelta.json",
  "features": {
    "seq_feat": "word",
    "targets": [
      "../srl/feats/gold.json",
      {
        "name": "sense",
        "key": "sense",
        "rank": 1
      }
    ],
    "inputs": [
      "../shared/feats/elmo.json",
      "../shared/feats/glove-100d.json",
      "../srl/feats/marker.json",
      {
        "name": "token_index",
        "key": "token_index",
        "rank": 1,
        "numeric": true
      }
    ]
  },
  "encoders": [
    {
      "name": "words_and_chars",
      "type": "concat",
      "inputs": [
        "word",
        "elmo",
        "marker"
      ],
      "input_dropout": 0.0
    },
    {
      "name": "blstm",
      "inputs": [
        "words_and_chars"
      ],
      "type": "dblstm",
      "state_size": 300,
      "encoder_dropout": 0.1,
      "encoder_layers": 8
    }
  ],
  "heads": [
    {
      "encoder": "blstm",
      "name": "gold",
      "type": "srl"
    },
    {
      "encoder": "blstm",
      "name": "sense",
      "type": "token-classifier",
      "metric": "Accuracy"
    }
  ]
}