{
  "reader": "conll_2005_phrase",
  "max_epochs": 500,
  "patience_epochs": 200,
  "batch_size": 80,
  "optimizer": "../srl/optim/adadelta.json",
  "features": {
    "seq_feat": "word",
    "targets": [
      "../srl/feats/gold.json"
    ],
    "inputs": [
      {
        "name": "word",
        "key": "word",
        "rank": 3,
        "mapping_funcs": [
          "lower",
          "digit_norm"
        ],
        "left_padding": 2,
        "right_padding": 2,
        "max_len": 15,
        "config": {
          "dim": 100,
          "initializer": {
            "embedding": "vectors/glove.6B.100d.txt",
            "pkl_path": "word-vectors.pkl",
            "include_in_vocab": 400000,
            "restrict_vocab": true
          },
          "function": {
            "name": "ConvNet",
            "kernel_size": 3,
            "num_filters": 100
          }
        }
      },
      "../srl/feats/marker.json"
    ]
  },
  "encoders": [
    {
      "name": "words_and_chars",
      "type": "concat",
      "inputs": [
        "word",
        "marker"
      ],
      "input_dropout": 0.0
    },
    {
      "name": "blstm",
      "inputs": [
        "words_and_chars"
      ],
      "type": "dblstm",
      "state_size": 300,
      "encoder_dropout": 0.1,
      "encoder_layers": 8
    }
  ],
  "heads": [
    {
      "encoder": "blstm",
      "name": "gold",
      "type": "srl"
    }
  ]
}