{
  "reader": {
    "field_index_map": "./reader/semlink-fields.json",
    "pred_start": 6
  },
  "max_epochs": 500,
  "patience_epochs": 200,
  "batch_size": 80,
  "optimizer": "../srl/optim/adadelta.json",
  "features": {
    "targets": [
      "../srl/feats/gold.json",
      {
        "name": "pos",
        "key": "pos",
        "indices": {
          "NN": 0,
          "<PAD>": 1
        },
        "unknown_word": "NN",
        "pad_word": "<PAD>"
      }
    ],
    "inputs": [
      "../shared/feats/elmo.json",
      "../shared/feats/glove-100d.json",
      "../srl/feats/marker.json"
    ]
  },
  "encoders": [
    {
      "name": "words_and_chars",
      "type": "concat",
      "inputs": [
        "word",
        "elmo",
        "marker"
      ],
      "input_dropout": 0.0
    },
    {
      "name": "blstm",
      "inputs": [
        "words_and_chars"
      ],
      "type": "dblstm",
      "state_size": 300,
      "encoder_dropout": 0.1,
      "encoder_layers": 8
    }
  ],
  "heads": [
    {
      "encoder": "blstm",
      "name": "gold",
      "type": "srl"
    },
    {
      "encoder": "blstm",
      "name": "pos",
      "type": "tagger",
      "crf": true,
      "metric": "F-Measure"
    }
  ]
}