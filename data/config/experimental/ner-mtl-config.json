{
  "reader": "conll_2003",
  "checkpoint_steps": 1500,
  "batch_size": 10,
  "optimizer": {
    "name": "LazyAdam",
    "params": {
      "beta1": 0.9,
      "beta2": 0.9
    },
    "lr": {
      "rate": 0.001,
      "name": "inverse_time_decay",
      "params": {
        "decay_steps": 2000,
        "decay_rate": 0.05
      }
    },
    "clip": 5.0
  },
  "features": {
    "seq_feat": "word",
    "targets": [
      {
        "name": "NE",
        "key": "gold",
        "indices": {
          "O": 0
        },
        "unknown_word": "O",
        "pad_word": "O"
      },
      {
        "name": "pos",
        "key": "pos",
        "indices": {
          "NN": 0,
          "<PAD>": 1
        },
        "unknown_word": "NN",
        "pad_word": "<PAD>"
      }
    ],
    "inputs": [
      {
        "name": "word",
        "key": "word",
        "mapping_funcs": [
          "lower",
          "digit_norm"
        ],
        "config": {
          "dim": 100,
          "initializer": {
            "embedding": "vectors/glove.6B.100d.txt",
            "pkl_path": "word-vectors.pkl",
            "include_in_vocab": 400000,
            "zero_init": true,
            "restrict_vocab": true
          }
        }
      },
      {
        "name": "char",
        "key": "word",
        "rank": 3,
        "left_padding": 2,
        "right_padding": 2,
        "max_len": 30,
        "mapping_funcs": [
          "chars"
        ],
        "config": {
          "dim": 30,
          "dropout": 0.5,
          "function": {
            "name": "ConvNet",
            "kernel_size": 3,
            "num_filters": 30
          }
        }
      }
    ]
  },
  "encoders": [
    {
      "name": "words_and_chars",
      "type": "concat",
      "inputs": [
        "word",
        "char"
      ],
      "input_dropout": 0.5
    },
    {
      "name": "blstm",
      "inputs": [
        "words_and_chars"
      ],
      "type": "lstm",
      "state_size": 300,
      "encoder_dropout": 0.5,
      "encoder_dropout": 0.5,
      "encoder_layers": 1
    }
  ],
  "heads": [
    {
      "encoder": "blstm",
      "name": "NE",
      "type": "ner",
      "crf": true
    },
    {
      "encoder": "blstm",
      "name": "pos",
      "type": "tagger",
      "crf": true
    }
  ]
}