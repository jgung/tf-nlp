{
  "reader": {
    "field_index_map": {
      "word": 0,
      "predicate": 4
    }
  },
  "patience_epochs": 5,
  "max_epochs": 500,
  "batch_size": 64,
  "optimizer": "../srl/optim/adadelta.json",
  "features": {
    "targets": [
      {
        "name": "gold",
        "key": "predicate",
        "mapping_funcs": [
          "predicate"
        ],
        "indices": {
          "0": 0,
          "1": 1
        },
        "unknown_word": "0",
        "pad_word": "0"
      }
    ],
    "inputs": [
      "../shared/feats/glove-100d.json"
    ]
  },
  "encoders": [
    {
      "name": "words_and_chars",
      "type": "concat",
      "inputs": [
        "word"
      ],
      "input_dropout": 0.0
    },
    {
      "name": "blstm",
      "inputs": [
        "words_and_chars"
      ],
      "type": "dblstm",
      "state_size": 300,
      "encoder_dropout": 0.1,
      "encoder_layers": 2
    }
  ],
  "heads": [
    {
      "encoder": "blstm",
      "name": "gold",
      "type": "tagger"
    }
  ]
}