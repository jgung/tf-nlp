{
  "reader": {
    "field_index_map": {
      "word": 2,
      "pos": 3,
      "predicate": 5
    },
    "pred_start": 6,
    "map_with_regex": true,
    "label_mappings": {
      "gold": {
        "^([RC]-)?(\\S+)\\$(\\S+)$": "\\1\\3"
      },
      "pb": {
        "^([RC]-)?(\\S+)\\$(\\S+)$": "\\1\\2"
      }
    }
  },
  "max_epochs": 500,
  "patience_epochs": 200,
  "batch_size": 80,
  "optimizer": "../srl/optim/adadelta.json",
  "features": {
    "targets": [
      "../srl/feats/gold.json",
      {
        "name": "pb",
        "key": "pb",
        "indices": {
          "O": 0
        },
        "unknown_word": "O",
        "pad_word": "O"
      }
    ],
    "inputs": [
      "../shared/feats/elmo.json",
      "../shared/feats/glove-100d.json",
      "../srl/feats/marker.json"
    ]
  },
  "encoders": [
    {
      "name": "words_and_chars",
      "type": "concat",
      "inputs": [
        "word",
        "elmo",
        "marker"
      ],
      "input_dropout": 0.0
    },
    {
      "name": "blstm",
      "inputs": [
        "words_and_chars"
      ],
      "type": "dblstm",
      "state_size": 300,
      "encoder_dropout": 0.1,
      "encoder_layers": 8
    }
  ],
  "heads": [
    {
      "encoder": "blstm",
      "name": "gold",
      "type": "srl"
    },
    {
      "encoder": "blstm",
      "name": "pb",
      "type": "srl"
    }
  ]
}