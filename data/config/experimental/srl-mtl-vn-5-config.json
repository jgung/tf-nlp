  "batch_size": 80,
  "optimizer": "../srl/optim/adadelta.json",
  "features": {
    "seq_feat": "word",
    "targets": [
      "../srl/feats/gold.json",
      {
        "name": "vn5",
        "key": "vn5",
        "indices": {
          "O": 0
        },
        "unknown_word": "O",
        "pad_word": "O"
      }
    ],
    "inputs": [
