{
  "reader": "conll_2005",
  "max_epochs": 512,
  "checkpoint_epochs": 128,
  "patience_epochs": 256,
  "batch_size": 80,
  "optimizer": {
    "name": "LazyAdam",
    "params": {
      "beta1": 0.9,
      "beta2": 0.9
    },
    "lr": {
      "name": "clr",
      "rate": 0.0001,
      "params": {
        "max_lr": 0.001,
        "step_size": 64
      }
    },
    "clip": 1.0
  },
  "features": {
    "targets": [
      "../srl/feats/gold.json"
    ],
    "inputs": [
      "../shared/feats/glove-100d.json",
      "../srl/feats/marker.json"
    ]
  },
  "encoders": [
    {
      "name": "tokens",
      "type": "concat",
      "inputs": [
        "word",
        "marker"
      ],
      "input_dropout": 0.0
    },
    {
      "name": "blstm",
      "inputs": [
        "tokens"
      ],
      "type": "dblstm",
      "state_size": 300,
      "encoder_output_dropout": 0.1,
      "encoder_layers": 8,
      "layer_norm": true
    }
  ],
  "heads": [
    {
      "encoder": "blstm",
      "name": "gold",
      "type": "srl"
    }
  ]
}