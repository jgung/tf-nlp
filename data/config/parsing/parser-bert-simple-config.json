{
  "reader": "conll_2009",
  "checkpoint_epochs": 0.5,
  "max_epochs": 4,
  "batch_size": 16,
  "optimizer": {
    "name": "bert",
    "lr": {
      "name": "bert",
      "rate": 0.00005,
      "warmup_proportion": 0.1
    },
    "clip": 1.0
  },
  "features": {
    "targets": [
      {
        "name": "head",
        "key": "head",
        "numeric": true,
        "padding_funcs": [
          {
            "type": "pad",
            "count": 1,
            "value": 0
          }
        ]
      },
      {
        "name": "deprel",
        "key": "deprel",
        "indices": {
          "O": 0,
          "X": 1
        },
        "unknown_word": "dep",
        "pad_word": "O",
        "padding_funcs": [
          {
            "type": "pad",
            "count": 1,
            "value": "<ROOT>"
          }
        ]
      }
    ],
    "inputs": [
      {
        "name": "bert",
        "drop_subtokens": true
      }
    ]
  },
  "encoders": [
    {
      "name": "bert-no-subtokens",
      "type": "remove_subtokens",
      "inputs": [
        "bert"
      ]
    },
    {
      "name": "identity",
      "inputs": [
        "bert-no-subtokens"
      ],
      "dropout": 0.1,
      "type": "identity"
    },
    {
      "name": "with-sentinel",
      "type": "sentinel",
      "inputs": [
        "identity"
      ]
    }
  ],
  "heads": [
    {
      "encoder": "with-sentinel",
      "name": "deprel",
      "type": "parser",
      "rel_mlp_size": 100,
      "arc_mlp_size": 500,
      "mlp_dropout": 0.33
    }
  ]
}