{
  "reader": "conllx",
  "batch_size": 100,
  "metric": "LAS",
  "optimizer": {
    "name": "LazyAdam",
    "params": {
      "beta1": 0.9,
      "beta2": 0.9
    },
    "lr": 0.002,
    "clip": 5.0
  },
  "features": {
    "targets": [
      {
        "name": "head",
        "key": "head",
        "numeric": true,
        "padding_funcs": [
          {
            "type": "pad",
            "count": 1,
            "value": 0
          }
        ]
      },
      {
        "name": "deprel",
        "key": "deprel",
        "indices": {
          "O": 0
        },
        "unknown_word": "O",
        "padding_funcs": [
          {
            "type": "pad",
            "count": 1,
            "value": "<ROOT>"
          }
        ]
      },
      {
        "name": "pos",
        "key": "xpos",
        "config": {
          "dim": 100
        },
        "padding_funcs": [
          {
            "type": "pad",
            "count": 1,
            "value": "<ROOT>"
          }
        ]
      }
    ],
    "inputs": [
      {
        "name": "word",
        "key": "word",
        "threshold": 2,
        "mapping_funcs": [
          "lower"
        ],
        "padding_funcs": [
          {
            "type": "pad",
            "count": 1,
            "value": "<ROOT>"
          }
        ],
        "config": {
          "dim": 100,
          "word_dropout": 0.33,
          "initializer": {
            "zero_init": true
          }
        }
      },
      {
        "name": "char",
        "key": "word",
        "rank": 3,
        "left_padding": 2,
        "right_padding": 2,
        "max_len": 30,
        "mapping_funcs": [
          "chars"
        ],
        "padding_funcs": [
          {
            "type": "pad",
            "count": 1,
            "value": "<ROOT>"
          }
        ],
        "config": {
          "dim": 30,
          "dropout": 0.5,
          "function": {
            "name": "ConvNet",
            "kernel_size": 3,
            "num_filters": 30
          }
        }
      }
    ]
  },
  "encoders": [
    {
      "name": "word-and-char",
      "type": "concat",
      "inputs": [
        "word",
        "char"
      ]
    },
    {
      "name": "pos-blstm",
      "inputs": [
        "word-and-char"
      ],
      "encoder": "lstm",
      "state_size": 128,
      "encoder_dropout": 0.33,
      "encoder_input_dropout": 0.33,
      "forget_bias": 1,
      "encoder_layers": 2
    },
    {
      "name": "dep-blstm",
      "inputs": [
        "word-and-char"
      ],
      "encoder": "lstm",
      "state_size": 128,
      "encoder_dropout": 0.33,
      "encoder_input_dropout": 0.33,
      "forget_bias": 1,
      "encoder_layers": 2
    },
    {
      "name": "pos-and-word",
      "type": "concat",
      "inputs": [
        "pos",
        "dep-blstm"
      ]
    }
  ],
  "heads": [
    {
      "encoder": "pos-and-word",
      "name": "deprel",
      "type": "parser",
      "metric": "LAS",
      "mlp_dropout": 0.33
    },
    {
      "encoder": "pos-blstm",
      "name": "pos",
      "type": "tagger",
      "metric": "Accuracy",
      "mlp_dropout": 0.33,
      "crf": true
    }
  ]
}