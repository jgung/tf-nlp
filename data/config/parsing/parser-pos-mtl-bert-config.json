{
  "reader": "conllx",
  "checkpoint_epochs": 0.5,
  "max_epochs": 16,
  "batch_size": 16,
  "optimizer": {
    "name": "bert",
    "lr": {
      "name": "bert",
      "rate": 0.00005,
      "warmup_proportion": 0.1
    },
    "clip": 1.0
  },
  "duplicate_uncased": 2,
  "features": {
    "targets": [
      {
        "name": "head",
        "key": "head",
        "numeric": true,
        "padding_funcs": [
          {
            "type": "pad",
            "count": 1,
            "value": 0
          }
        ]
      },
      {
        "name": "deprel",
        "key": "deprel",
        "indices": {
          "O": 0,
          "X": 1
        },
        "unknown_word": "dep",
        "pad_word": "O",
        "padding_funcs": [
          {
            "type": "pad",
            "count": 1,
            "value": "<ROOT>"
          }
        ]
      },
      {
        "name": "pos",
        "key": "xpos",
        "indices": {
          "O": 0,
          "X": 1
        },
        "unknown_word": "NN",
        "pad_word": "O"
      }
    ],
    "inputs": [
      {
        "name": "bert",
        "drop_subtokens": true
      }
    ]
  },
  "encoders": [
    {
      "name": "bert-no-subtokens",
      "type": "remove_subtokens",
      "inputs": [
        "bert"
      ]
    },
    {
      "name": "with-sentinel",
      "type": "sentinel",
      "inputs": [
        "bert-no-subtokens"
      ]
    },
    {
      "name": "dep-blstm",
      "inputs": [
        "with-sentinel"
      ],
      "encoder": "lstm",
      "state_size": 400,
      "encoder_dropout": 0.33,
      "encoder_input_dropout": 0.33,
      "forget_bias": 1,
      "encoder_layers": 3
    }
  ],
  "heads": [
    {
      "encoder": "dep-blstm",
      "name": "deprel",
      "type": "parser",
      "rel_mlp_size": 100,
      "arc_mlp_size": 500,
      "mlp_dropout": 0.33
    },
    {
      "encoder": "bert-no-subtokens",
      "name": "pos",
      "type": "tagger",
      "metric": "Accuracy",
      "mlp_dropout": 0.33
    }
  ]
}