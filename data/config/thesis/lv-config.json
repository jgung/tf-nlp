{
  "reader": "./reader/ft-reader.json",
  "checkpoint_epochs": 0.5,
  "max_epochs": 8,
  "batch_size": 16,
  "optimizer": "./optim/bert.json",
  "features": {
    "targets": [
      "./feats/lv-sense.json"
    ],
    "inputs": [
      "./feats/bert.json",
      {
        "name": "predicate_index",
        "key": "predicate_index",
        "rank": 1,
        "numeric": true
      }
    ]
  },
  "encoders": [
    "./encoder/bert-no-subtokens.json",
    "./encoder/bert-dropout.json"
  ],
  "heads": [
    {
      "encoder": "bert-dropout",
      "name": "sense",
      "type": "token-classifier"
    }
  ]
}