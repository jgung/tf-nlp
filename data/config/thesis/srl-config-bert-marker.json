{
  "reader": "./reader/reader.json",
  "checkpoint_epochs": 0.5,
  "max_epochs": 8,
  "batch_size": 16,
  "optimizer": "./optim/bert.json",
  "features": {
    "targets": [
      "./feats/srl.json"
    ],
    "inputs": [
      "./feats/bert-with-marker.json"
    ]
  },
  "encoders": [
    "./encoder/bert-no-subtokens.json",
    {
      "name": "srl-inputs",
      "type": "identity",
      "inputs": [
        "bert-no-subtokens"
      ],
      "dropout": 0.1
    },
    "./encoder/srl-blstm.json",
    "./encoder/srl-repeat-predicate.json",
    "./encoder/srl-concat-predicate.json",
    "./encoder/srl-mlp.json"
  ],
  "heads": [
    "./heads/srl-head.json"
  ]
}