{
  "reader": "./reader/semlink-reader-combine-5-all.json",
  "checkpoint_epochs": 0.5,
  "max_epochs": 8,
  "batch_size": 16,
  "optimizer": "./optim/bert.json",
  "features": {
    "targets": [
      "./feats/vn-srl.json",
      {
        "name": "sense_pred",
        "key": "sense_pred",
        "indices": {
          "None": 0
        },
        "unknown_word": "None",
        "pad_word": "None",
        "rank": 1,
        "config": {
          "dim": 100,
          "dropout": 0.1,
          "initializer": {
            "embedding": "vectors/vn.glove.6B.100d.txt",
            "pkl_path": "vn-vectors.pkl",
            "zero_init": true,
            "restrict_vocab": false
          }
        },
        "constraint_key": "predicate_lemma"
      }
    ],
    "inputs": [
      "./feats/bert-with-sense.json",
      "./feats/predicate_lemma.json",
      "./feats/marker.json"
    ]
  },
  "encoders": [
    "./encoder/bert-no-subtokens.json",
    "./encoder/bert-dropout.json",
    {
      "name": "bert-and-marker",
      "type": "concat",
      "inputs": [
        "bert-dropout",
        "marker"
      ]
    },
    {
      "name": "srl-inputs",
      "type": "repeat_and_concat",
      "inputs": [
        "sense_pred",
        "bert-and-marker"
      ]
    },
    "./encoder/srl-blstm.json",
    "./encoder/srl-repeat-predicate.json",
    "./encoder/srl-concat-predicate.json",
    "./encoder/srl-mlp.json"
  ],
  "heads": [
    "./heads/vn-srl-head.json",
    {
      "encoder": "bert-dropout",
      "name": "sense_pred",
      "type": "token-classifier",
      "mlp_layers": [
        768
      ],
      "mlp_dropout": 0.1,
      "weighted_embedding": true,
      "weight": 0.5
    }
  ]
}